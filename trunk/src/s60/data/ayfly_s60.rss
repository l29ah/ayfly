	{
	items =
		{
		// added the new Options menu command here
		MENU_ITEM
				{
				command = ECommand1;
				txt = qtn_command1;
				},
		MENU_ITEM
				{
				command = ECommand2;
				txt = qtn_command2;
				},
		MENU_ITEM
                {
                command = ECommand3;
                txt = qtn_command3;
                },
		MENU_ITEM
				{
				command = EHelp;
				txt = qtn_help;
				},
		MENU_ITEM
				{
				command = EAbout;
				txt = qtn_about;
				},
		MENU_ITEM
				{
				command = EAknSoftkeyExit;
				txt = qtn_exit;
				}
		};
	}

